<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="NewPersistenceUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>application.data.model.TblCategory</class>
        <class>application.data.model.TblOrder</class>
        <class>application.data.model.TblOrderproduct</class>
        <class>application.data.model.TblPricing</class>
        <class>application.data.model.TblProduct</class>
        <class>application.data.model.TblRole</class>
        <class>application.data.model.TblUser</class>
        <class>application.data.model.TblUserrole</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/mydb"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value=""/>
            <property name="hibernate.connection.password" value=""/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
